<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <Text><![CDATA[
{
	"WARNING:": "DO NOT EDIT THIS FILE. IT IS AUTOMATICALLY GENERATED FROM building/Repository.json.props. Edit there instead",
	"Releases": [
		{
			"Id": "$(ModId)",
			"Version": "$(ModVersion)",
			"DownloadUrl": "$(CodeRepositoryUrl)/releases/download/$(ModVersion)/$(BuildArchiveName).zip"
		}
	]
}]]></Text>
    </PropertyGroup>

    <Target Name="GenerateRepositoryJson">
        <WriteLinesToFile File="../repository.json" Lines="$(Text)" Overwrite="true" />
    </Target>
</Project>
